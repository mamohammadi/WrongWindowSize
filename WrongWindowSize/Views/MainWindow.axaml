<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WrongWindowSize.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WrongWindowSize.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WrongWindowSize.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="WrongWindowSize"
        ExtendClientAreaToDecorationsHint="True">
    <Grid>
		<Label>Text to show Left/Top affected</Label>
		<Label>Text to show Top also affected</Label>
        <Label Name="SizeLabel" Foreground="White" Margin="50">Window size:</Label>
        <Button VerticalAlignment="Top" Margin="50,100,50,50" Click="Button_OnClick">Update Size</Button>
        <views:MainView />
		<Label VerticalAlignment="Bottom" HorizontalAlignment="Right">Text to show Bottom/Right affected</Label>
    </Grid>
    
</Window>
